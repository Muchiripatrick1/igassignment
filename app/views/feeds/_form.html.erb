<%= form_with(model: feed, local: true, url:confirm_feeds_path) do |form| %>
  <div class="field">
    <%= form.label :image %>
    <!-- When returning from the confirmation screen to the new creation screen, -->
    <!-- Description to display the uploaded image -->
    <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
    <%= form.hidden_field :user_id %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>